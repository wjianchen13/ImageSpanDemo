<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="5dp"
        android:background="#3fff0000"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_test1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#3f00ff00"
            android:gravity="fill_horizontal"
            android:textColor="#8aeaff"
            android:breakStrategy="simple"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="5dp"
        android:background="#3fff0000"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_test2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:breakStrategy="simple"
            android:singleLine="false"
            android:scrollHorizontally="false"
            android:background="#3f00ff00"
            android:textColor="#8aeaff"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="5dp"
        android:background="#3fff0000"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_test3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:breakStrategy="simple"
            android:singleLine="false"
            android:scrollHorizontally="false"
            android:background="#3f00ff00"
            android:textColor="#8aeaff"
            android:textSize="13sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_test1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:onClick="onTest1"
        android:text="测试1"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_test2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_test1"
        android:textAllCaps="false"
        android:text="测试2"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:onClick="onTest2" />

    <Button
        android:id="@+id/btn_test3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_test2"
        android:textAllCaps="false"
        android:text="测试3"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:onClick="onTest3" />

</LinearLayout>