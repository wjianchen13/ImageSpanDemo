<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="15dp"
        android:background="#3fff0000"
        android:orientation="horizontal" >

        <com.example.imagespandemo.gradient.GradientTextView
            android:id="@+id/tv_test1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#3f00ff00"
            android:gravity="fill_horizontal"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="#8aeaff"
            android:breakStrategy="simple"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="5dp"
        android:background="#3fff0000"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_test2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:breakStrategy="simple"
            android:singleLine="false"
            android:scrollHorizontally="false"
            android:background="#3f00ff00"
            android:textColor="#8aeaff"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="5dp"
        android:background="#3fff0000"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_test3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:background="#3f00ff00"
            android:textColor="#8aeaff"
            android:textSize="13sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_test1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:onClick="onTest1"
        android:text="测试1"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_test2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_test1"
        android:textAllCaps="false"
        android:text="测试2"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:onClick="onTest2" />

    <Button
        android:id="@+id/btn_test3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_test2"
        android:textAllCaps="false"
        android:text="测试3"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:onClick="onTest3" />

    <ImageView
        android:id="@+id/imgv_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="5dp"
        android:minHeight="5dp"
        android:background="#ff00ff00"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp" />

    <Button
        android:id="@+id/btn_test4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="显示生成Bitmap"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:onClick="onTest4" />

    <RelativeLayout
        android:id="@+id/rlyt_user_name"
        android:layout_width="240dp"
        android:layout_height="30dp"
        android:layout_marginTop="15dp"
        android:background="#ff0000"
        android:layout_gravity="center_horizontal">

        <com.example.imagespandemo.cache.MarqueeTextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center" />

    </RelativeLayout>

    <Button
        android:id="@+id/btn_test5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="显示滚动字体"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:onClick="onTest5" />

</LinearLayout>